<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity2"
    android:background="@drawable/fondo_snorlax">

    <TextView
        android:id="@+id/txtJuegos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#C51345"
        android:gravity="center"
        android:text="Pokemon - Games"
        android:textSize="26dp" />
        <HorizontalScrollView
            android:id="@+id/hsv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtJuegos">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtJuegos"
                android:background="#C8650303"
                android:padding="20dp"
                android:orientation="horizontal">
            <ImageView
                android:id="@+id/rojo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/rojofuego"
                android:layout_marginRight="20dp"
                ></ImageView>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/oro1"
                android:layout_marginRight="20dp"


                ></ImageView>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/rubi1"
                android:layout_marginRight="20dp"
                ></ImageView>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/diamante1"
                android:layout_marginRight="20dp"
                ></ImageView>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/negro1"
                android:layout_marginRight="20dp"
                ></ImageView>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/x1"
                android:layout_marginRight="20dp"
                ></ImageView>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/sol1"
                android:layout_marginRight="20dp"
                ></ImageView>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/espada1"
                android:layout_marginRight="20dp"
                ></ImageView>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/unite1"
                android:layout_marginRight="20dp"
                ></ImageView>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/purpura1"
                android:layout_marginRight="20dp"
                ></ImageView>
            </LinearLayout>
        </HorizontalScrollView>

        <LinearLayout
            android:layout_below="@+id/hsv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#C904397A"
            android:padding="13dp">
            <Spinner
                android:id="@+id/spinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:background="#DD0546B5"
               >

            </Spinner>


        </LinearLayout>
        <LinearLayout
            android:id="@+id/linL1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/hsv"
            android:orientation="horizontal">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/reciclerId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="60dp"
                android:layout_marginBottom="70dp"
                android:background="#D79C0808">

            </androidx.recyclerview.widget.RecyclerView>


        </LinearLayout>

</RelativeLayout>